{
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"],
  "compilerOptions": {
    "incremental": true,
    "noEmit": true,
    "module": "ESNext",
    "strict": true,
    "lib": ["esnext", "dom", "dom.iterable"],
    "jsx": "preserve",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",

    "baseUrl": ".",
    "paths": {
      "@/*": ["/src/*"],
      "@shared/*": ["../shared/*"]
    },

    "types": ["node", "vite/client"]
  }
}
